# ==========================================
# 1. 数据库基础配置 (PostgreSQL)
# ==========================================
# 数据库超级管理员用户名
POSTGRES_USER=postgres
# 数据库超级管理员密码 (生产环境请务必修改)
POSTGRES_PASSWORD=your_secure_password_here
# 默认创建的数据库名称
POSTGRES_DB=strategy_db

# ==========================================
# 2. 数据库高可用复制配置 (Replication)
# ==========================================
# 专门用于主从同步的复制用户密码
REPLICATOR_PASSWORD=your_secure_replicator_password_here
# 主数据库服务器的 IP 地址 (仅在非 Swarm 模式或跨集群连接时需要)
VPS_PRIMARY_IP=x.x.x.x
# 应用服务器 (运行 Redis/Admin/Bot) 的 IP 地址
VPS_APP_IP=x.x.x.x
# 从数据库服务器 IP
VPS_REPLICA_IP=x.x.x.x
# 策略引擎服务器 IP
VPS_STRATEGY_IP=x.x.x.x
# 远程服务器登录用户名
VPS_USER=root

# ==========================================
# 3. Admin 管理后台服务配置
# ==========================================
# Admin 服务对外端口
ADMIN_PORT=8000
# 初始管理员用户名 (首次启动时使用)
ADMIN_USERNAME=admin
# 初始管理员密码
ADMIN_PASSWORD=admin_password_change_me
# Flask/FastAPI Session 加密密钥 (必须是随机长字符串，否则会导致安全漏洞)
# 可以使用 `openssl rand -hex 32` 生成
SECRET_KEY=your_super_secret_random_key_here

# ==========================================
# 4. Bot 机器人服务配置
# ==========================================
# Telegram Bot Token (从 @BotFather 获取)
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# ==========================================
# 5. 策略引擎配置 (Strategy Engine)
# ==========================================
# 币安 (Binance) API Key - 用于实盘交易（可选）
BINANCE_API_KEY=
# 币安 (Binance) Secret Key
BINANCE_SECRET_KEY=
# 格式: http://IP:端口
PROXY_URL=